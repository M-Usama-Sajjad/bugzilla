

<h1>Bugs</h1>

<table class="table table-dark table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.title %></td>
        <td><%= bug.description %></td>
        <td><%= bug.status %></td>
        <td><%= link_to 'Show', bug ,class:"btn btn-secondary"%></td>
        <td><%= link_to 'Edit', edit_bug_path(bug),class:"btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?'} ,class:"btn btn-danger" %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Bug', new_bug_path,class:"btn btn-secondary" %>
